#:kivy 1.8.0

<Fader>:
    size_hint: None, 1
    width: '32dp'
    id: fader
    cols: 1
    rows: 3
    Label:
        id: channel_label
        size_hint: 1, None
        halign: 'center'
        height: '24dp'
    Slider:
        id: channel_slider
        size_hint: None, 1
        width: '32dp'
        orientation: 'vertical'
        step: 1
        padding: '10dp'
        min: 0
        max: 255
    Label:
        id: channel_value
        size_hint: 1, None
        halign: 'center'
        height: '24dp'

<ConsoleScreen>:
    GridLayout:
        id: console
        cols: 1
        rows: 1
        size_hint: 1, 1
        Carousel:
            id: console_car
            on_size: root.resize_carousel(self.size)
