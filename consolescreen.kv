#:kivy 1.8.0

<Fader>:
    size_hint: None, 1
    width: 64
    id: fader
    cols: 1
    rows: 3
    Label:
        id: channel_label
        font_size: 24
        size_hint: 1, None
        height: 32
    Slider:
        id: channel_slider
        size_hint: None, 1
        width: 52
        orientation: 'vertical'
        step: 1
        padding: 10
        min: 0
        max: 255
    Label:
        id: channel_value
        font_size: 24
        size_hint: 1, None
        height: 32

<ConsoleScreen>:
    GridLayout:
        id: console
        cols: 1
        rows: 1
        size_hint: 1, 1
        ScrollView:
            size_hint: 1, 1
            BoxLayout:
                id: faders
                spacing: 8
                size_hint: None, 1
                width: 1600
