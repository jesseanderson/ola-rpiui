#:kivy 1.8.0
#:import KivyLexer kivy.extras.highlight.KivyLexer
#:import Factory kivy.factory.Factory

<Screen>:
    canvas.before:
		Color:
			rgb: .2, .2, .2
		Rectangle:
			size: self.size

<ActionBar>:
    height: 50
    ActionView:
        id: av
        ActionButton:
            text: 'Previous screen'
            font_size: 24
            on_release: app.go_previous_screen()
            important: True
        ActionPrevious:
            disabled: True
            with_previous: False
        ActionButton:
            text: 'Next screen'
            font_size: 24
            on_release: app.go_next_screen()
            important: True
