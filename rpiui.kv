#:kivy 1.8.0
#:import KivyLexer kivy.extras.highlight.KivyLexer
#:import Factory kivy.factory.Factory

<PatchingPopup>:
    title: 'Patch New Universe'
    auto_dismiss: False
    GridLayout:
        cols: 1
        rows: 4
        GridLayout:
            cols: 2
            rows: 1
            Label:
                text: 'Universe ID:'
                size_hint: None, None
                height: 35
            TextInput:
                id: universe_id
                multiline: False
                size_hint: None, None
                height: 35
                width: 50
        GridLayout:
            cols: 2
            rows: 1
            Label:
                text: 'Universe Name:'
                size_hint: None, None
                height: 35
            TextInput:
                id: universe_name
                multiline: False
                size_hint: None, None
                height: 35
                width: 200
        ListView:
            id: device_list
            size_hint: 0.8, 0.8
        GridLayout:
            cols: 2
            rows: 1
            Button:
                id: cancel_universe
                text: 'Cancel'
                size_hint: None, None
                height: 50
                width: 200
                on_press: root.dismiss()
            Button:
                id: patch_universe
                text: 'Patch Universe'
                size_hint: None, None
                height: 50
                width: 200
                on_press: app.patch_universe()
<Screen>:
    canvas.before:
		Color:
			rgb: .2, .2, .2
		Rectangle:
			size: self.size

<MainScreen>:	
    GridLayout:
        id: settings
        cols: 1
        rows: 4
        Label: 
            id: olad_status
            size_hint: None, None
            size: '200dp', '48dp'
        Label:
            text: 'Active Universes:'
            size_hint: None, None
            size: '200dp', '48dp'
        ListView:
            id: universe_list_view
            size: '200dp', '150dp'
        Button:
            id: patch_button
            text: 'Patch New Universe'
            size_hint: None, None
            size: '200dp', '48dp'
            on_press: app.patch_popup()

<PatchingScreen>:
	AnchorLayout:
		Button:
			size_hint: None, None
			size: '200dp', '48dp'
			text: 'Future Patching Screen'

<ConsoleScreen>:	
	AnchorLayout:
		Button:
			size_hint: None, None
			size: '200dp', '48dp'
			text: 'Future DMX Console Screen'

<MonitorScreen>:	
	AnchorLayout:
		Button:
			size_hint: None, None
			size: '200dp', '48dp'
			text: 'Future DMX Monitor Screen'

<RDMSettingsScreen>:	
	AnchorLayout:
		Button:
			size_hint: None, None
			size: '200dp', '48dp'
			text: 'Future RDM Settings Screen'

<RDMTestsScreen>:	
	AnchorLayout:
		Button:
			size_hint: None, None
			size: '200dp', '48dp'
			text: 'Future RDM Tests Screen'

<ActionBar>:
    ActionView:
        id: av
        ActionButton:
            text: 'Previous screen'
            on_release: app.go_previous_screen()
            important: True
        ActionPrevious:
            disabled: True
            with_previous: False
        ActionButton:
            text: 'Next screen'
            on_release: app.go_next_screen()
            important: True
