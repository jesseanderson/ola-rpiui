#:kivy 1.8.0
#:import KivyLexer kivy.extras.highlight.KivyLexer
#:import Factory kivy.factory.Factory

<Screen>:
    canvas.before:
		Color:
			rgb: .2, .2, .2
		Rectangle:
			size: self.size

<ScreenTabs>:
    size_hint: 1, 1
    do_default_tab: False
    tab_pos: 'top_mid'
    TabbedPanelItem:
        id: settings_screen
        text: 'Settings'
    TabbedPanelItem:
        id: monitor_screen
        text: 'DMX Monitor'
    TabbedPanelItem:
        id: console_screen
        text: 'DMX Console'