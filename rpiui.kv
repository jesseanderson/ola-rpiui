#:kivy 1.8.0
#:import KivyLexer kivy.extras.highlight.KivyLexer
#:import Factory kivy.factory.Factory

<PatchingPopup>:
    title: 'Patch New Universe'
    auto_dismiss: False
    GridLayout:
        cols: 1
        rows: 4
        GridLayout:
            cols: 2
            rows: 1
            size_hint: 1, None
            height: 45
            Label:
                text: 'Universe ID:'
                size_hint: None, None
                height: 35
                width: 125
            TextInput:
                id: universe_id
                multiline: False
                size_hint: None, None
                height: 35
                width: 50
        GridLayout:
            cols: 2
            rows: 1
            size_hint: 1, None
            height: 45
            Label:
                text: 'Universe Name:'
                size_hint: None, None
                width: 125
                height: 35
            TextInput:
                id: universe_name
                multiline: False
                size_hint: None, None
                height: 35
                width: 150
        ListView:
            id: device_list
            size_hint: 1, 1
        GridLayout:
            cols: 2
            rows: 1
            size_hint: 1, None
            height: 35
            Button:
                id: cancel_universe
                text: 'Cancel'
                size_hint: 1, None
                height: 35
                on_press: root.dismiss()
            Button:
                id: patch_universe
                text: 'Patch Universe'
                size_hint: 1, None
                height: 35
                on_press: app.patch_universe()

<InfoPopup>:
    size_hint: None, None
    height: 200
    width: 250
    title: 'INFO'
    GridLayout:
        rows: 2
        cols: 1
        size_hint: 1, 1
        Label: 
            id: info
            size_hint: 1, 1
            halign: 'center'
        Button:
            size_hint: None, None
            width: 225
            height: 25
            text: 'Close'
            on_press: root.dismiss()

<Screen>:
    canvas.before:
		Color:
			rgb: .2, .2, .2
		Rectangle:
			size: self.size

<MainScreen>:	
    GridLayout:
        id: settings
        cols: 1
        rows: 4
        size_hint: 1, 1
        Label: 
            id: olad_status
            size_hint: 1, None
            height: 25
        Label:
            text: 'Active Universes:'
            size_hint_y: None
            height: 25
        ListView:
            id: universe_list_view
            size_hint: 0.8, 1
        Button:
            id: patch_button
            text: 'Patch New Universe'
            size_hint: 0.8, None
            height: 25
            on_press: app.patch_popup()

<MonitorScreen>:
    GridLayout:
        id: monitor
        cols: 1
        rows: 1
        size_hint: 1, 1
        Label:
            text: 'Future DMX Monitor Screen'

<ConsoleScreen>:
    GridLayout:
        id: console
        cols: 1
        rows: 1
        size_hint: 1, 1
        Label:
            text: 'Future DMX Console Screen'

<ActionBar>:
    ActionView:
        id: av
        ActionButton:
            text: 'Previous screen'
            on_release: app.go_previous_screen()
            important: True
        ActionPrevious:
            disabled: True
            with_previous: False
        ActionButton:
            text: 'Next screen'
            on_release: app.go_next_screen()
            important: True
