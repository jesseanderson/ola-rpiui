#:kivy 1.8.0
#:import KivyLexer kivy.extras.highlight.KivyLexer
#:import Factory kivy.factory.Factory

<Screen>:
    canvas.before:
		Color:
			rgb: .2, .2, .2
		Rectangle:
			size: self.size

<MonitorScreen>:
    GridLayout:
        id: monitor
        cols: 1
        rows: 1
        size_hint: 1, 1
        Label:
            text: 'Future DMX Monitor Screen'

<ConsoleScreen>:
    GridLayout:
        id: console
        cols: 1
        rows: 1
        size_hint: 1, 1
        Label:
            text: 'Future DMX Console Screen'

<ActionBar>:
    ActionView:
        id: av
        ActionButton:
            text: 'Previous screen'
            on_release: app.go_previous_screen()
            important: True
        ActionPrevious:
            disabled: True
            with_previous: False
        ActionButton:
            text: 'Next screen'
            on_release: app.go_next_screen()
            important: True
