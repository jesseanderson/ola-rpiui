#:kivy 1.8.0

<MonitorCell>:
    size_hint: None, None
    rows: 2
    cols: 1
    canvas.before:
        Color:
            rgba: 0, 0.5, 0, self.alpha
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        id: channel
        size_hint: 1, 1
        font_size: '10dp'
        halign: 'center'
    Label:
        id: data
        size_hint: 1, 1
        font_size: '15dp'
        halign: 'center'

<MonitorScreen>:
    GridLayout:
        id: monitor
        cols: 1
        rows: 1
        size_hint: 1, 1
        Carousel:
            id: monitor_car
            direction: 'bottom'
            on_size: root.resize_carousel(self.size)
